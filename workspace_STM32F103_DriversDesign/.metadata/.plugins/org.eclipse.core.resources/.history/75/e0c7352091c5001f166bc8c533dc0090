#include <stdint.h>
#include <stm32f103xx.h>
#include "stm32f103xx_gpio.h"

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

void delay(uint32_t time);
void GPIO_LED_init();

GPIO_handle_t LED;

int main(void)
{
	GPIO_Init(&LED);
    /* Loop forever */
	while(1){
		GPIO_TogglePin(&LED, GPIO_PIN_13);
	}
}

void delay(uint32_t time){
	while(time){
		time --;
	}
}

void GPIO_LED_init(){
	LED.pGPIOx = GPIOC;
	LED.pGPIO_config->GPIO_Pin = GPIO_PIN_13;
	LED.pGPIO_config->pGPIO_CRR->GPIO_Mode = GPIO_OUTPUT_MODE_2MHZ;
	LED.pGPIO_config->pGPIO_CRR->GPIO_ConfigOutput = GPIO_GP_OP;
}
